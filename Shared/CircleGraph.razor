<div class="container">
    <div class="circleGraph">
        rondje
    </div>
    <div class="stats">
        @if (stats != null)
        {
            for (int i = 0; i < stats.Length; i++)
            {
                <div class="singleStat">
                    <div>@stats[i].Title</div>
                    <div>@stats[i].Amount</div>
                </div>
            }
        }

    </div>
</div>

@code {
    [Parameter] public Stat[]? stats { get; set; }
}